<Window x:Class="StreamReaderForKI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Border BorderBrush="Black" BorderThickness="3" Height="100" Width="300" x:Name="Border_Main" DragEnter="Border_Main_DragEnter" AllowDrop="True">
            <TextBlock x:Name="TextBlock_Main" Background="#FFFFDC00" TextWrapping="WrapWithOverflow"/>
        </Border>
        <Button Content="Convert" Height="100" Width="300" x:Name="Button_Main" Click="Button_Main_Click"/>
    </StackPanel>
</Window>
